<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" stderr="true" testdox="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage includeUncoveredFiles="true" processUncoveredFiles="true">
    <include>
      <directory suffix=".php">../../../http/api</directory>
      <directory suffix=".php">../../../include</directory>
    </include>
    <exclude>
      <directory suffix=".php">lib</directory>
    </exclude>
  </coverage>
  <testsuites>
    <testsuite name="Unit Tests">
      <directory>test/ut/php</directory>
    </testsuite>
  </testsuites>
  <php>
    <env name="XDEBUG_MODE" value="coverage" force="true" />
  </php>
</phpunit>
